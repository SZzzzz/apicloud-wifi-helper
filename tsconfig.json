{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": false,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "bin"
  ],
  "include": [
    "src/**/*"
  ]
}